{% extends "base.html.twig" %}

{% block body %}
    <div class="page-top-info">
        <div class="container">
        <p class="text-center h4">Mise Ã  jour de la carte {{product.name}}</p>
        </div>
    </div>
    <div class="container spad">
        <div class="col-6 border-right">
            <div class="row">
                <div class="col-6">
                        <img src="{{product.getImages[0].url}}" alt="{{product.name}}">
                </div>
                <div class="col-6">
                    <div class="column">
                        <h4 class="mb-2">{{product.name}}</h4>
                        <p class="mb-4">{{product.setCode}}</p>
                        <div class="row d-flex justify-content-around text-body">
                            <p>{{product.type}}</p>
                            {% if product.race is not null %}
                                <p>{{product.race}}</p>
                            {% endif %}
                        </div>
                        {% if product.atk is not null %}
                            <div class="row d-flex justify-content-around text-body">
                                <p>ATK: {{product.atk}}</p>
                                <p>DEF: {{product.def}}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}