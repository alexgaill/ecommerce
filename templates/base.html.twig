<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Welcome!{% endblock %}</title>

        <meta charset="UTF-8">
        <meta name="description" content=" Divisima | eCommerce Template">
        <meta name="keywords" content="divisima, eCommerce, creative, html">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300,300i,400,400i,700,700i" rel="stylesheet">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body>
       <header class="header-section">
		<div class="header-top">
			<div class="container">
				<div class="row">
					<div class="col-lg-2 text-center text-lg-left">
						<!-- logo -->
						<a href="{{ path('home')}}}}" class="site-logo">
							<h2>Y C S</h2>
						</a>
					</div>
					<div class="col-xl-6 col-lg-5">
						<form class="header-search-form">
							<input type="text" placeholder="Rechercher">
							<button><i class="flaticon-search"></i></button>
						</form>
					</div>
					<div class="col-xl-4 col-lg-5">
						<div class="user-panel">
							<div class="up-item">
								<i class="flaticon-profile"></i>
								{% if app.user %}
									<a href="{{path('logout')}}">Déconnexion</a>
								{% else %}
									<a href="{{path('login')}}">Connexion</a> ou <a href="{{path('signup')}}">Inscription</a>
								{% endif %}
							</div>
							<div class="up-item">
								<div class="shopping-card">
								{% set countProducts = app.session.get('panier') | length %}
									<i class="flaticon-bag"></i>
									<span>{{ countProducts }}</span>
								</div>
								<a href="{{ path('basket') }}">Panier</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<nav class="main-navbar">
			<div class="container">
				<!-- menu -->
				<ul class="main-menu nav">
					<li><a href="{{ path('home')}}">Accueil</a></li>
					<li><a href="{{ path('shop')}}">Boutique</a></li>
					{% if  is_granted('ROLE_USER') %}
						<li><a href="{{ path('collection')}}">Ma collection</a></li>
						<li><a href="{{ path('account')}}">Mon Compte</a></li>

					{% elseif is_granted('ROLE_ADMIN') %}
						<li><a href="{{ path('commandes')}}">Commandes</a></li>
						<li><a href="{{ path('achats')}}">Nouvel arrivage</a></li>
					{% endif %}
					<!-- <li><a href="#">Jewelry
						<span class="new">New</span>
					</a></li> -->
					<!-- <li><a href="#">Shoes</a>
						<ul class="sub-menu">
							<li><a href="#">Sneakers</a></li>
							<li><a href="#">Sandals</a></li>
							<li><a href="#">Formal Shoes</a></li>
							<li><a href="#">Boots</a></li>
							<li><a href="#">Flip Flops</a></li>
						</ul>
					</li> -->
				</ul>
			</div>
		</nav>
	</header>
        {% block body %}{% endblock %}
	<footer class="footer-section">
		<div class="container">
			<div class="footer-logo text-center">
				<a href="{{ path('home') }}"><h2>Y C S</h2></a>
				{# <a href="index.html"><img src="./img/logo-light.png" alt=""></a> #}
			</div>
			<div class="row">
                <div class="footer-widget contact-widget text-center mx-auto" style="color: white;">
                    <h2>Infos pratiques</h2>
                    <div class="con-info">
                        <span>Nom vendeur</span>
                        <p>Alexandre Gaillot</p>
                    </div>
                    <div class="con-info">
                        <span>Adresse</span>
                        <p>1 rue du Fossé Mignard 77700 Chessy</p>
                    </div>
                    <div class="con-info">
                        <span>Téléphone</span>
                        <p>+33(0) 625566616</p>
                    </div>
                    <div class="con-info">
                        <span>Mail</span>
                        <p>contact@steptosuccess.fr</p>
                    </div>
                </div>
			</div>
		</div>
		{# <div class="social-links-warp">
			<div class="container">
				<div class="social-links">
					<a href="" class="instagram"><i class="fa fa-instagram"></i><span>instagram</span></a>
					<a href="" class="google-plus"><i class="fa fa-google-plus"></i><span>g+plus</span></a>
					<a href="" class="pinterest"><i class="fa fa-pinterest"></i><span>pinterest</span></a>
					<a href="" class="facebook"><i class="fa fa-facebook"></i><span>facebook</span></a>
					<a href="" class="twitter"><i class="fa fa-twitter"></i><span>twitter</span></a>
					<a href="" class="youtube"><i class="fa fa-youtube"></i><span>youtube</span></a>
					<a href="" class="tumblr"><i class="fa fa-tumblr-square"></i><span>tumblr</span></a>
				</div>
			</div>
		</div> #}
	</footer>
		{% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('basket') }}
			{{ encore_entry_script_tags('arrivage') }}
			{{ encore_entry_script_tags('slicknav') }}
			{{ encore_entry_script_tags('nicescroll') }}
			{{ encore_entry_script_tags('owlcarousel') }}
			{{ encore_entry_script_tags('zoom') }}
			{{ encore_entry_script_tags('jquery-ui') }}
			{{ encore_entry_script_tags('main') }}
			{{ encore_entry_script_tags('validation') }}
        {% endblock %}
    </body>
</html>