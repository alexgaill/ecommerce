{% extends 'base.html.twig' %}

{% block body %}
    {% if result %}
        <div class="container spad">
            <h2>Mail renvoyé</h2>
            <p class="mt-3"> Un lien de validation a été renvoyé sur votre boite mail. Cliquez sur celui-ci pour valider votre compte. </p>
        </div>
    {% else %}
        <div class="container spad">
            <h2>Votre compte est déjà valide</h2>
            <p class="mt-3"> Connectez-vous pour commander dès à présent.</p>
        </div>
    {% endif %}
{% endblock %}