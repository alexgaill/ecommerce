{% extends 'base.html.twig' %}

{% block body %}
    {% if result %}
        <div class="container spad">
            <h2>Votre compte est validé!!</h2>
            <p class="mt-3"> Connectez-vous pour commander dès à présent.</p>
        </div>
    {% else %}
        <div class="container spad text-center">
            <h2>Une erreur s'est produite</h2>
            <p class="mt-3"> Le lien est invalide. Réessayez de cliquer dessus ou recevez-en un nouveau.</p>
            <div class="mt-5">
                <form action="{{ path('sendMail') }}" method="post">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Votre Email">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Renvoyer</button>
                    </div>
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}